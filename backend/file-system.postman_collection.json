		{
			"name": "login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// 1. Get token from login response\r",
							"let res = pm.response.json();\r",
							"let token = res.token;\r",
							"\r",
							"// 2. Save the token for future requests\r",
							"pm.environment.set(\"authToken\", token);\r",
							"\r",
							"// 3. Decode JWT payload (middle part)\r",
							"let payloadBase64 = token.split('.')[1];\r",
							"let payloadJson = atob(payloadBase64); // decode Base64\r",
							"let payload = JSON.parse(payloadJson);\r",
							"\r",
							"// 4. Save user info as environment variables\r",
							"pm.environment.set(\"userEmail\", payload.email);\r",
							"pm.environment.set(\"userName\", payload.fullname);\r",
							"pm.environment.set(\"userMobile\", payload.mobile);\r",
							"pm.environment.set(\"userId\", payload.id);\r",
							"\r",
							"console.log(\"Decoded JWT payload:\", payload);\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
